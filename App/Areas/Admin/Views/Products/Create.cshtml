@model WorkProduct
@{
    ViewData["Title"] = "Create Product";
    List<WorkCategory> categories = ViewData["Categories"] as List<WorkCategory>;
    var category = categories.Find(x => x.Id == 8);
}
<div class="container mt-5">
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create Product</h4>
                <div class="alert alert-danger" asp-validation-summary="ModelOnly"></div>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter here...">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Title"></label>
                        <input asp-for="Title" class="form-control" placeholder="Enter here...">
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Title Description</label>
                        <input asp-for="TitleDescription" class="form-control" placeholder="Enter here...">
                        <span asp-validation-for="TitleDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter here...">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Quote"></label>
                        <input asp-for="Quote" class="form-control" placeholder="Enter here...">
                        <span asp-validation-for="Quote" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Link"></label>
                        <input asp-for="Link" class="form-control" placeholder="Enter here...">
                        <span asp-validation-for="Link" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>File upload</label><br />
                        <input accept="image/*"
                               class="inputted"
                               asp-for="FormFiles"
                               multiple>
                        <span asp-validation-for="FormFiles" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label>Select Category</label>
                        <select class="form-control" asp-for="Category.Name" d="Choose">
                            @foreach (var categori in categories)
                            {
                                <option value="@categori.Name">@categori.Name</option>
                            }
                        </select>
                        @*<input asp-for="Category.Name" value="Others" class="form-control" placeholder="Enter here..." />*@
                        <span asp-validation-for="Category.Name" class="text-danger "></span>
                    </div>

                    <button type="submit" class="btn btn-primary me-2 text-light">Submit</button>
                    <button asp-controller="Products" asp-action="Main" class="btn btn-danger text-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>
